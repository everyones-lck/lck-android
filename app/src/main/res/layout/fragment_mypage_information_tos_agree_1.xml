<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.MainActivity"
        android:background="@drawable/bg_gradient_color">

        <ImageView
            android:id="@+id/iv_mypage_information_tos_agree_1_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_mypage_back"
            app:layout_constraintTop_toTopOf="@id/tv_mypage_information_tos_agree_1_topbar_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_mypage_information_tos_agree_1_topbar_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_mypage_information_tos_agree_1_topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            style="@style/TextAppearance.LCK.Bold.Title1_22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="39dp"
            android:textColor="@color/LCK_purple"/>

        <TextView
            android:id="@+id/tv_mypage_information_tos_agree_1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 처리방침"
            style="@style/TextAppearance.LCK.Bold.Title2_18sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_information_tos_agree_1_topbar_title"
            android:layout_marginTop="50dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_mypage_information_tos_agree_1_title"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/tv_mypage_information_tos_agree_1_detail"
                style="@style/TextAppearance.LCK.Light.Detail_10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/tos_details_agree_1"
                android:textColor="@color/white" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
