<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EveryonesLCK" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">#262626</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowIsTranslucent">true</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EveryonesLCK" parent="Base.Theme.EveryonesLCK" />
    
    <style name="Widget.AppCompat.EditText.LCK" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorHighlight">@color/text_high_light</item>
        <item name="android:textCursorDrawable">@color/text_high_light</item>
        <item name="android:textSelectHandle">@drawable/img_text_select_handler</item>
        <item name="android:textSelectHandleLeft">@drawable/img_text_select_handler_left</item>
        <item name="android:textSelectHandleRight">@drawable/img_text_select_handler_right</item>
    </style>

    <style name="Widget.AppCompat.TextView.LCK" parent="Widget.AppCompat.TextView">
        <item name="android:textIsSelectable">true</item>
        <item name="android:textColorHighlight">@color/text_high_light</item>
        <item name="android:textCursorDrawable">@color/text_high_light</item>
        <item name="android:textSelectHandle">@drawable/img_text_select_handler</item>
        <item name="android:textSelectHandleLeft">@drawable/img_text_select_handler_left</item>
        <item name="android:textSelectHandleRight">@drawable/img_text_select_handler_right</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColor">@drawable/sel_calender_textcolor</item>
        <item name="android:textAppearance">@style/TextAppearance.LCK.Light.Body_14sp</item>
    </style>

    <!-- 캘린더의 날짜(Day)의 스타일 설정 -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/sel_calender_textcolor</item>
        <item name="android:fontFamily">@font/cafe_ohsquare_air</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.LCK.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
    </style>
</resources>